## Maintainer: Jacob Durant <technopig@hotmail.com>
pkgname=adk-linux-fkey-git
_pkgname=adk-linux-fkey
_destname1="/usr"
_licensedir="/usr/share/licenses/"
pkgver=22.12
pkgrel=04
pkgdesc="A Bash Script with a GUI to refresh Pacman-keys and Databases"
arch=('x86_64')
url="https://github.com/Technopig100/"
license=('GPL3')
depends=('python-gobject')
makedepends=('git')
conflicts=('adk-fkeys-git')
options=(!strip !emptydirs)
source=(adk-linux-fkey::"git+${url}/adk-linux-fkeys")
sha256sums=('SKIP')

pkgver() {
  date +%y.%m
}

package() {
	install -dm755 ${pkgdir}${_licensedir}${_pkgname}
	install -m644  ${srcdir}/${_pkgname}/LICENSE ${pkgdir}${_licensedir}${_pkgname}
	install -Dm644 ${srcdir}/${_pkgname}/fkeys.png $pkgdir/usr/share/pixmaps/fkeys.png

	cp -r ${srcdir}/${_pkgname}/${_destname1} ${pkgdir}
}
