# Maintainer: Jacob Durant <technopig@hotmail.com>
pkgname=adk-uniscript-git
_pkgname=adk-uniscript
pkgver=22.12
pkgrel=01
pkgdesc="A Collection of Bash Script"
url="https://github.com/Technopig100"
arch=('any')
license=('GPL')
depends=('bash')
makedepends=('git')
replaces=()
conflicts=()
source=(${_pkgname}::"git+${url}/${_pkgname}")
md5sums=('SKIP')


pkgver() {
  date +%y.%m
}

package() {
    cd ${srcdir}/$_pkgname
    install -dm755 $pkgdir/usr/local/bin/
    cp -r adk-install $pkgdir/usr/local/bin/
    cp -r adk-update $pkgdir/usr/local/bin/
    cp -r adk-remove $pkgdir/usr/local/bin/
    install -Dm644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE
    install -Dm644 README.md $pkgdir/usr/share/doc/$pkgname/README.md
}
