# Maintainer: Jacob Durant <technopig@hotmail.com>
pkgname=adk-branding-config-git
_pkgname=adk-branding-config
_destname1="/etc/"
_destname2="/usr/share/libalpm/hooks/"
_destname3="/usr/lib/"
_destname4="/etc/xdg/"
_destname5="/usr/share/pixmaps/"
_destname6="/usr/bin/"
_destname7="/usr/share/systemd/bootctl/"
pkgver=22.12
pkgrel=17
pkgdesc="Adk-Linux ISO Branding Hooks"
arch=('x86_64')
url="https://github.com/Technopig100/adk-branding-config.git"
license=('GPL3')
makedepends=('git')
depends=('adk-dark-git'
				'filesystem')
conflicts=('adklinux-iso-config-git')
provides=("${pkgname}")
_licensedir="/usr/share/licenses/"
install=$_pkgname.install
options=(!strip !emptydirs)
source=(${_pkgname}::"git+https://github.com/Technopig100/${_pkgname}.git")
sha256sums=('SKIP')
#install='readme.install'

# Please refer to the 'USING VCS SOURCES' section of the PKGBUILD man page for
# a description of each element in the source array.

pkgver() {
  date +%y.%m
}

package() {
  install -dm755 ${pkgdir}${_licensedir}${_pkgname}
  install -m644  ${srcdir}/${_pkgname}/LICENSE ${pkgdir}${_licensedir}${_pkgname}

	install -dm755 ${pkgdir}${_destname1}
	 cp -r  ${srcdir}/${_pkgname}${_destname1}adk-release ${pkgdir}${_destname1}
	 cp -r  ${srcdir}/${_pkgname}${_destname1}mota ${pkgdir}${_destname1}

	install -dm755 ${pkgdir}${_destname2}
	 cp -r  ${srcdir}/${_pkgname}${_destname2}adk-god.hook ${pkgdir}${_destname2}
 	 
	install -dm755 ${pkgdir}${_destname3}
	 cp -r  ${srcdir}/${_pkgname}${_destname3}adk-release ${pkgdir}${_destname3}

	install -dm755 ${pkgdir}${_destname4}
	cp -r  ${srcdir}/${_pkgname}${_destname4}* ${pkgdir}${_destname4}

	install -dm755 ${pkgdir}${_destname5}
	cp -r  ${srcdir}/${_pkgname}${_destname5}* ${pkgdir}${_destname5}

 	install -dm755 ${pkgdir}${_destname6}
 	cp -r  ${srcdir}/${_pkgname}${_destname6}* ${pkgdir}${_destname6}
	
	install -dm755 ${pkgdir}${_destname7}
 	cp -r  ${srcdir}/${_pkgname}${_destname7}* ${pkgdir}${_destname7}

}