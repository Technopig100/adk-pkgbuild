## Maintainer: Jacob Durant <technopig@hotmail.com>

pkgname="flat-remix-adk"
pkgver=r15.f271cd4
pkgrel=3
pkgdesc="Flat Remix is an icon theme inspired by material design. It is mostly flat using a colorful palette with some shadows, highlights, and gradients for some depth."
arch=('any')
url="https://github.com/Technopig100/flat-remix-adk"
license=('GPL3')
options=('!strip')
source=(${pkgname}::"git+https://github.com/Technopig100/${pkgname}.git")
sha256sums=('SKIP')

pkgver() {
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
	cd "${srcdir}/${pkgname}/"
	make install DESTDIR=${pkgdir}
}

